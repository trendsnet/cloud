    <artifactId>cloud-boot</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <modules>
        <module>cloud-boot-eureka</module>
        <module>cloud-boot-gateway</module>
        <module>cloud-boot-admin</module>
